<configuration>

  <appSettings>
    <add key="PRODUCTION_URL" value="https://revapi.statpro.com/v1" />
    <add key="STAGING_URL" value="https://revapistage.statpro.com/v1" />
    <add key="DEVELOPMENT_URL" value="https://revapidev.statpro.com/v1" />
    <add key="SESSION_SECRET" value="pWqxFbVCoBh7smF4AWHGq3EokVDUAiufcemR5OFYMq07rWXZqYrsQBopYZz4nFu" />
    <add key="VERSION" value="0.3 (Beta)" />
  </appSettings>

  <system.webServer>

    <modules runAllManagedModulesForAllRequests="false" />

    <!-- NOTE: By default, debugging and logging are unsecure and should not be enabled for production applications in the cloud.-->
    <iisnode
      node_env="production"
      debuggingEnabled="true"
      loggingEnabled="true"
      devErrorsEnabled="true"
    />

    <!-- indicates that the server.js file is a node.js application 
    to be handled by the iisnode module -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <clear />
        <rule name="app" enabled="true" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="server\.js.+" negate="true" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
          <action type="Rewrite" url="server.js" />
        </rule>
        <rule name="Redirect to HTTPS">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{SERVER_NAME}/{R:1}" redirectType="SeeOther" />
        </rule>
      </rules>
    </rewrite>

    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="POST,GET,DELETE,PUT,OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="X-Requested-With" />
      </customHeaders>
    </httpProtocol>

  </system.webServer>

</configuration>